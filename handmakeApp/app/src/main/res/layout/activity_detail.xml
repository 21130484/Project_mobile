<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detail_product.DetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/viewMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:id="@+id/view2"
                    android:layout_width="wrap_content"
                    android:layout_height="260dp"
                    android:background="@drawable/grey_background"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/image_slider"
                    android:layout_width="wrap_content"
                    android:layout_height="260dp"
                    app:iss_auto_cycle="true"
                    app:iss_delay="10000"
                    app:iss_period="10000"
                    app:iss_text_align="CENTER"

                    tools:ignore="MissingConstraints" />
<!--                <ImageView-->
<!--                    android:id="@+id/image_main"-->
<!--                    android:layout_width="260dp"-->
<!--                    android:layout_height="260dp"-->
<!--                    tools:ignore="MissingConstraints">-->

<!--                </ImageView>-->


                <ImageView
                    android:id="@+id/imageLArrow"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"

                    android:background="@drawable/icon_background"
                    android:padding="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/left_arrow" />

                <ImageView
                    android:id="@+id/imageCart"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/icon_background"
                    android:padding="8dp"
                    android:src="@drawable/cart"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/imageLArrow" />

                <LinearLayout
                    android:id="@+id/contentHead"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"

                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/view2">

                    <TextView
                        android:id="@+id/titleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_weight="1"
                        android:text="Gấu bông đan len tặng người iu"
                        android:textColor="@color/black"
                        android:textSize="23dp"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:id="@+id/priceText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:text="130.000 vnđ"
                        android:textColor="@color/pink"
                        android:textSize="22sp"
                        android:textStyle="bold"

                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            app:srcCompat="@drawable/star" />

                        <TextView
                            android:id="@+id/rateText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="4.2"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="Đánh giá"
                            android:textColor="@color/black"
                            android:textSize="18dp" />

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"

                            app:srcCompat="@drawable/comment" />

                        <TextView
                            android:id="@+id/rateCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="4"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="Bình luận"
                            android:textColor="@color/black"
                            android:textSize="18dp" />
                    </LinearLayout>

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buyBtn"
                    style="@android:style/Widget.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/red_button_background"
                    android:text="Mua ngay"
                    android:textColor="@color/white"
                    android:textSize="18sp"

                    app:layout_constraintTop_toBottomOf="@+id/contentHead" />

                <View
                    android:id="@+id/viewLine"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/gray"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/buyBtn" />


            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                              android:orientation="vertical"  >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mô tả sản phẩm"
                android:textSize="20dp"
                android:layout_margin="16dp"
                android:textStyle="bold"
                />

                <TextView
                android:id="@+id/contentBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="0dp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. " />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtShow"
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <View
                android:id="@+id/viewLine1"
                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:background="@color/gray"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/buyBtn" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bình luận &amp; Đánh giá"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/ratingWrite"
                    style="@android:style/Widget.Button.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:background="@drawable/green_button_background"
                    android:gravity="center"




                    android:text="Bình luận"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:textStyle="italic"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"

                    />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_conner_bg"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <LinearLayout
                    android:id="@+id/rateArea"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_margin="0dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ratingNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bahnschrift"
                        android:text="4.5"
                        android:textColor="@color/black"
                        android:textSize="40sp"
                        android:textStyle="bold"

                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/star"
                        android:layout_gravity="bottom"
                        android:paddingBottom="10dp"
                        android:paddingLeft="5dp"/>


                </LinearLayout>

                    <TextView
                        android:id="@+id/ratingCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15 đánh giá"
                        android:paddingBottom="6dp"
                        android:textColor="@color/gray"
                        android:textStyle="italic"
                        android:textSize="14sp"
                        />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/ratingSee"
                        style="@android:style/Widget.Button.Small"
                        android:layout_width="60dp"
                        android:layout_height="25dp"
                        android:background="@drawable/red_button_background"
                        android:gravity="center"
                        android:text="Xem chi tiết"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:textStyle="italic"

                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="16sp"
                            android:layout_height="16sp"
                            android:layout_marginStart="4dp"
                            android:src="@drawable/star"
                            app:tint="@color/green" />

                        <ProgressBar
                            android:id="@+id/rating5"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="0dp"
                            android:layout_height="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:indeterminateOnly="false"
                            android:progress="76"
                            android:progressTint="@color/green" />

                        <TextView
                            android:id="@+id/ratio5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="76%"
                            android:textColor="@color/black"
                            android:textSize="14sp" />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="16sp"
                            android:layout_height="16sp"
                            android:layout_marginStart="4dp"
                            android:src="@drawable/star"
                            app:tint="@color/green" />

                        <ProgressBar
                            android:id="@+id/rating4"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="0dp"
                            android:layout_height="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:indeterminateOnly="false"
                            android:progress="76"
                            android:progressTint="@color/green" />

                        <TextView
                            android:id="@+id/ratio4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="76%"
                            android:textColor="@color/black"
                            android:textSize="14sp" />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="16sp"
                            android:layout_height="16sp"
                            android:layout_marginStart="4dp"
                            android:src="@drawable/star"
                            app:tint="@color/green" />

                        <ProgressBar
                            android:id="@+id/rating3"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="0dp"
                            android:layout_height="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:indeterminateOnly="false"
                            android:progress="76"
                            android:progressTint="@color/green" />

                        <TextView
                            android:id="@+id/ratio3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="76%"
                            android:textColor="@color/black"
                            android:textSize="14sp" />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="16sp"
                            android:layout_height="16sp"
                            android:layout_marginStart="4dp"
                            android:src="@drawable/star"
                            app:tint="@color/orange" />

                        <ProgressBar
                            android:id="@+id/rating2"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="0dp"
                            android:layout_height="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:indeterminateOnly="false"
                            android:progress="76"
                            android:progressTint="@color/orange" />

                        <TextView
                            android:id="@+id/ratio2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="76%"
                            android:textColor="@color/black"
                            android:textSize="14sp" />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="16sp"
                            android:layout_height="16sp"
                            android:layout_marginStart="4dp"
                            android:src="@drawable/star"
                            app:tint="@color/red" />

                        <ProgressBar
                            android:id="@+id/rating1"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="0dp"
                            android:layout_height="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:indeterminateOnly="false"
                            android:progress="0"
                            android:progressTint="@color/red" />

                        <TextView
                            android:id="@+id/ratio1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0%"
                            android:textColor="@color/black"
                            android:textSize="14sp" />


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>
            <View
                android:id="@+id/viewLine2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/gray"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/buyBtn" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sản phẩm liên quan"
                android:textSize="20dp"
                android:layout_margin="16dp"
                android:textStyle="bold"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>