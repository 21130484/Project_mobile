<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
<View
    android:layout_width="100dp"
    android:layout_height="3dp"
    android:layout_marginTop="10dp"
    android:layout_gravity="center_horizontal"
    android:background="@color/navy"/>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >
   <ImageView
       android:id="@+id/subItem"
       android:layout_width="60dp"
       android:layout_height="60dp"
       android:src="@drawable/main_detail_product"
       android:scaleType="fitCenter"
       android:layout_margin="16dp"
       android:background="@drawable/grey_background"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       />
    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toRightOf="@id/subItem"
        app:layout_constraintTop_toTopOf="@id/subItem">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gấu bông đan len tặng người iu"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kho còn ... sản phẩm"
            android:textSize="10sp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="192.000 vnđ"
            android:textStyle="bold"
            android:textColor="@color/pink"
            />



    </LinearLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/navy"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/subItem"


        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_marginTop="16dp"
        android:id="@+id/colorPick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/subItem"
        android:text="Màu sắc : "
        app:layout_constraintTop_toBottomOf="@id/line1"
        />
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/colorPick"
        app:layout_constraintTop_toBottomOf="@id/colorPick"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xanh"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đỏ"/>
        </LinearLayout>
    </RadioGroup>
    
    
    
    
</androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/doneBtn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/red_button_background"
        android:text="Mua"
        android:textColor="@color/white"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_gravity="center_horizontal"
        />
  
</LinearLayout>