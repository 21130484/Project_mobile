<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HandmakeApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/background</item>

        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.HandmakeApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.HandmakeApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.HandmakeApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="MyRatingBar" parent="Widget.AppCompat.RatingBar">
<!--        Chưa chọn-->
        <item name="colorControlNormal">@color/gray</item>

<!--        chọn-->
        <item name="colorControlActivated">@color/orange</item>

    </style>
</resources>